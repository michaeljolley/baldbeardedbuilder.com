---
import BaseHead, {
  type Props as BaseHeadProps,
} from "../components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import SkipToContent from "@components/SkipToContent.astro";
import "../styles/global.css";

export interface Props extends BaseHeadProps {}

const { title, description, permalink, canonicalUrl } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <BaseHead {title} {description} {permalink} {canonicalUrl} />
  <body class="bg-darkGray">
    <SkipToContent />
    <Header />
    <main id="content">
      <slot />
    </main>
    <Footer />
    <style is:global>
      body {
        @apply font-inter;
        @apply text-zinc-400;
      }
      .container {
        @apply mx-auto;
      }
    </style>
  </body>
</html>
