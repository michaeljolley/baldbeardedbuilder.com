---
import BaseHead, {
  type Props as BaseHeadProps,
} from '../components/BaseHead.astro';
import Header from '@components/Header.astro';
import SkipToContent from '@components/SkipToContent.astro';

export interface Props extends BaseHeadProps {}

const { title, description, permalink, canonicalUrl, ograph } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <BaseHead {title} {description} {permalink} {canonicalUrl} {ograph} />
  <script src="../scripts/yo.ts"></script>
  <body>
    <SkipToContent />
    <Header />
    <main id="content">
      <slot />
    </main>
  </body><style lang="scss">
    @import '@styles/_variables';

    html {
      scroll-behavior: smooth;
      scroll-padding-top: 100px;
    }

    html,
    body {
      height: 100%;
    }

    body {
      display: flex;
      flex-direction: column;
      margin: 0;
      padding: 0;

      background-color: $bg-dark;
      color: $light;
      font-family: $inter;
    }
  </style>
</html>
