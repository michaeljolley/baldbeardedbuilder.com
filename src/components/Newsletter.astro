<section class="newsletter" id="newsletter">
  <div class="section-inner">
    <div class="newsletter-card">
      <div class="newsletter-left">
        <img src="/images/dotnetdrip.svg" alt="The .NET Drip" class="newsletter-logo" />
      </div>
      <div class="newsletter-right">
        <div class="newsletter-badge">Every Mon ¬∑ Wed ¬∑ Fri</div>
        <h2>The .NET Drip</h2>
        <p>Pure .NET and C# delivered to your inbox three times a week. Tips, tutorials, and insights to keep your skills sharp.</p>
				<div id="subscribe-form-container" >
					<form class="newsletter-form" action="/?subscribed=true#newsletter" name="net-drip" data-netlify="true" netlify-honeypot="bot-field" method="POST">
						<p class="hidden">
							<label>Don't fill this out if you're human: <input name="bot-field" /></label>
						</p>
						<input type="hidden" name="utm_source" id="utm_source" value="baldbeardedbuilder" />
						<input 
							placeholder="developer@example.com" 
							type="email"
							id="email"
							name="email"
							required
							aria-describedby="email-error"
							aria-invalid="false" />
						<button type="submit" class="newsletter-btn">Subscribe</button>
					</form>
        	<p id="email-error" role="alert"></p>
				</div>
				<div id="subscribe-success" class="hidden">
					<p>üëç Thank you for subscribing to The .NET Drip! Be sure to add drip@dotnetdrip.com to your contacts or safe senders list.</p>
				</div>
        <p class="newsletter-link">Browse the archive and learn more at <a href="https://dotnetdrip.com" target="_blank" rel="noopener">dotnetdrip.com</a></p>
      </div>
    </div>
  </div>
</section>

<style>
  .newsletter {
    text-align: center;
  }

	.hidden {
		display: none;
	}

  .newsletter-card {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem;
    background: linear-gradient(135deg, rgba(147, 51, 234, 0.1), rgba(59, 130, 246, 0.1));
    border-radius: 0.75rem;
    border: 1px solid rgba(147, 51, 234, 0.2);
  }

  .newsletter-left {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .newsletter-logo {
    width: 120px;
    height: auto;
  }

  .newsletter-right {
    text-align: left;
  }

  .newsletter-badge {
    display: inline-block;
    background: linear-gradient(135deg, #9333ea, #3b82f6);
    color: white;
    padding: 0.35rem 0.85rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .newsletter-right h2 {
    margin: 0 0 0.75rem 0;
    font-size: 1.75rem;
  }

  .newsletter-right p {
    opacity: 0.8;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .newsletter-form {
    display: flex;
    gap: 0.75rem;
  }

  .newsletter-form input {
    padding: 0.75rem 1.25rem;
    border-radius: 0.5rem;
    border: 1px solid rgba(128, 128, 128, 0.2);
    background: rgba(128, 128, 128, 0.05);
    color: var(--text-color);
    font-size: 1rem;
    flex: 1;
    max-width: 280px;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: #9333ea;
  }

  .newsletter-btn {
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    border: none;
    background: linear-gradient(135deg, #9333ea, #3b82f6);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .newsletter-btn:hover {
    opacity: 0.9;
    transform: translateX(2px);
  }

  .newsletter-link {
    margin-top: 1rem;
    margin-bottom: 0;
    font-size: 0.85rem;
    opacity: 0.7;
  }

  .newsletter-link a {
    color: #a855f7;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  :global(html.dark) .newsletter-link a {
    color: #c084fc;
  }

  .newsletter-link a:hover {
    color: #60a5fa;
    text-decoration: underline;
  }

  :global(html.dark) .newsletter-link a:hover {
    color: #93c5fd;
  }

  @media (max-width: 900px) {
    .newsletter-form {
      flex-direction: column;
      align-items: center;
    }

    .newsletter-form input {
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 600px) {
    .newsletter-card {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 1.5rem;
      padding: 2rem;
    }

    .newsletter-right {
      text-align: center;
    }

    .newsletter-form {
      flex-direction: column;
      align-items: center;
    }

    .newsletter-form input {
      max-width: 100%;
      width: 100%;
    }
  }
</style>


<script is:inline>
  // Check for success query param on page load and capture utm_source
  (function() {
    const urlParams = new URLSearchParams(window.location.search);
    
    if (urlParams.get('subscribed') === 'true') {
      const formContainer = document.getElementById('subscribe-form-container');
      const successContainer = document.getElementById('subscribe-success');
      if (formContainer && successContainer) {
        formContainer.classList.add('hidden');
        successContainer.classList.remove('hidden');
      }
    }
  })();

  const subscribeForm = document.getElementById("subscribe-form");
  const subscribeEmailInput = document.getElementById("email");
  const subscribeEmailError = document.getElementById("email-error");
  
  function showSubscribeError(message) {
    if (subscribeEmailError) {
      subscribeEmailError.textContent = message;
      subscribeEmailError.classList.remove("hidden");
    }
    if (subscribeEmailInput) {
      subscribeEmailInput.setAttribute("aria-invalid", "true");
    }
  }
  
  function clearSubscribeError() {
    if (subscribeEmailError) {
      subscribeEmailError.textContent = "";
      subscribeEmailError.classList.add("hidden");
    }
    if (subscribeEmailInput) {
      subscribeEmailInput.setAttribute("aria-invalid", "false");
    }
  }
  
  function validateSubscribeEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }
  
  subscribeEmailInput?.addEventListener("input", () => {
    clearSubscribeError();
  });
  
  subscribeForm?.addEventListener("submit", (e) => {
    clearSubscribeError();
    
    const email = subscribeEmailInput?.value?.trim();
    
    // Validate email
    if (!email) {
      e.preventDefault();
      showSubscribeError("Email is required");
      return;
    }
    
    if (!validateSubscribeEmail(email)) {
      e.preventDefault();
      showSubscribeError("Please enter a valid email address");
      return;
    }
    
    // Validation passed - allow form to submit naturally
  });
</script>
