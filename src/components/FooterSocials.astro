---
import Icon from './Icon.astro';
---

<div>
  <ul>
    <li>
      <a
        href="https://twitter.com/michaeljolley"
        rel="me"
        target="_blank"
        class="twitter"
        title="Follow the musings on Twitter"
      >
        <Icon icon="Twitter" style="height:1rem;" class="icon" />
      </a>
    </li>
    <li>
      <a
        href="https://youtube.com/baldbeardedbuilder"
        rel="me"
        target="_blank"
        class="youtube"
        title="Subscribe, like & comment on YouTube videos"
      >
        <Icon icon="YouTube" style="height:1rem;" class="icon" />
      </a>
    </li>
    <li>
      <a
        href="https://twitch.tv/baldbeardedbuilder"
        rel="me"
        target="_blank"
        class="twitch"
        title="Check out the live streams on Twitch"
      >
        <Icon icon="Twitch" style="height:1rem;" class="icon" />
      </a>
    </li>
    <li>
      <a
        href="https://linkedin.com/in/michaelwjolley"
        rel="me"
        target="_blank"
        class="linkedin"
        title="Let's get professional"
      >
        <Icon icon="LinkedIn" style="height:1rem;" class="icon" />
      </a>
    </li>
    <li>
      <a
        href="https://github.com/michaeljolley"
        rel="me"
        target="_blank"
        class="github"
        title="Yeah. I write code."
      >
        <Icon icon="GitHub" style="height:1rem;" class="icon" />
      </a>
    </li>
    <li>
      <a
        href="https://discord.gg/kC8HTrs59R"
        rel="me"
        target="_blank"
        class="discord"
        title="Join the conversation on Discord"
      >
        <Icon icon="Discord" style="height:1rem;" class="icon" />
      </a>
    </li>
  </ul>
</div>
<style>
  :global([data-theme='light']) {
    --footer-socials-link: var(--dark);
    --footer-socials-link-hover: var(--pink);
  }

  :global([data-theme='dark']) {
    --footer-socials-link: var(--light);
    --footer-socials-link-hover: var(--green);
  }

  div {
    display: flex;
    align-items: flex-end;
  }

  ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 2rem;
    margin: 0;
  }

  li:not(:last-child) {
    margin-right: 1rem;
  }

  .icon {
    color: var(--footer-socials-link);
    fill: var(--footer-socials-link);
  }

  .icon:hover,
  .icon:active {
    color: var(--footer-socials-link-hover);
    fill: var(--footer-socials-link-hover);
  }

  @media screen and (min-width: 768px) {
    ul {
      padding: 4rem;
    }
  }
</style>
