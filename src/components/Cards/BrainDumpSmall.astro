---
import type { CollectionEntry } from 'astro';

export interface Props {
  brainDump: CollectionEntry<'brainDump'>;
}

const { brainDump } = Astro.props;

let options = {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
};
---

<li class="card">
  <h4><a href={`/brain-dump/${brainDump.slug}/`}>{brainDump.data.title}</a></h4>
  <p>{brainDump.data.description}</p>
  <date
    >{
      new Intl.DateTimeFormat('en-US', options).format(brainDump.data.pubDate)
    }</date
  >
</li>

<style>
  .card {
    border-image-source: var(--gradient-vert);
    border-left: 6px solid;
    border-image-slice: 1;
    padding-left: 2.5rem;
    list-style: none;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-evenly;
  }
  .card > h4 {
    font-family: var(--inter);
    font-size: 1.5rem;
    font-weight: normal;
    margin: 0;
    padding: 0;
    color: var(--text);
  }
  .card > h4 a,
  .card > h4 a:hover {
    color: var(--text);
  }
  p,
  date {
    font-size: 0.8rem;
    color: var(--gray);
  }
</style>
