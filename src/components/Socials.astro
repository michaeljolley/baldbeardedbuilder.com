---
import Icon from './Icon.astro'
---

<ul>
  <li>
    <a
      href="https://twitter.com/michaeljolley"
      rel="me"
      target="_blank"
      class="twitter"
      title="Follow the musings on Twitter"
    >
      <Icon icon="Twitter" style="height:1.25rem;" class="icon" />
    </a>
  </li>
  <li>
    <a
      href="https://youtube.com/baldbeardedbuilder"
      rel="me"
      target="_blank"
      class="youtube"
      title="Subscribe, like & comment on YouTube videos"
    >
      <Icon icon="YouTube" style="height:1.25rem;" class="icon" />
    </a>
  </li>
  <li>
    <a
      href="https://twitch.tv/baldbeardedbuilder"
      rel="me"
      target="_blank"
      class="twitch"
      title="Check out the live streams on Twitch"
    >
      <Icon icon="Twitch" style="height:1.25rem;" class="icon" />
    </a>
  </li>
  <li>
    <a
      href="https://discord.gg/kC8HTrs59R"
      rel="me"
      target="_blank"
      class="discord"
      title="Join the conversation on Discord"
    >
      <Icon icon="Discord" style="height:1.25rem;" class="icon" />
    </a>
  </li>
</ul>

<style lang="scss">
import '@styles/_variables';
  ul {
    display: none;
    list-style: none;

    @media screen and (min-width: $sm) {
      display: flex;
      gap: 1rem;
    }

    .icon {
      color: $light;
      fill: $light;

      &::hover,
      &:active {
        color: $green;
        fill: $green;
      }
    }
  }
</style>
