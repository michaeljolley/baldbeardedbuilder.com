---
import { getEvents } from 'src/scripts/notion';
import NextEvent from './Cards/NextEvent.astro';
import ScheduleCard from './Cards/ScheduleCard.astro';

const events = await getEvents();
const next = events.splice(0, 1)[0];
---

<section>
  <div class="container">
    <div class="col">
      <div>
        <NextEvent event={next} />
      </div>
      <div>
        <h2>Schedule</h2>
        <ul>
          {events.map((event) => <ScheduleCard {event} />)}
        </ul>
      </div>
    </div>
  </div>

  <style>
    section {
      padding: 4rem 0;
    }

    .container {
      display: flex;
      flex-direction: column;
    }

    .col {
      display: flex;
      flex-direction: column;
      gap: 4rem;
      padding: 0 2rem;
    }

    h2 {
      font-family: var(--syne);
      font-weight: bold;
      font-size: 2.5rem;
      line-height: 2.5rem;
      margin: 0;
      margin-bottom: 2rem;
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      list-style: none;
      margin: 0;
      padding: 0 0 0 2rem;
    }

    @media screen and (min-width: 768px) {
      .col {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>
</section>
