<style>
  footer {
    background: rgba(var(--header-bg-rgb), 0.4);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-top: 1px solid rgba(128, 128, 128, 0.1);
    margin-top: 4rem;
    padding: 3rem 2rem 0;
  }

  :global(:root) {
    --header-bg-rgb: 255, 255, 255;
  }

  :global(html.dark) {
    --header-bg-rgb: 15, 15, 26;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-nav {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-brand .logo {
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--text-color);
  }

  .tagline {
    margin-top: 0.75rem;
    opacity: 0.7;
    font-size: 0.9rem;
    max-width: 250px;
  }

  .footer-links h4,
  .footer-social h4 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.6;
    margin-bottom: 1rem;
  }

  .footer-links ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    text-decoration: none;
    color: var(--text-color);
    opacity: 0.8;
    transition: opacity 0.2s ease, color 0.2s ease;
  }

  .footer-links a:hover {
    opacity: 1;
    color: #9333ea;
  }

  :global(html.dark) .footer-links a:hover {
    color: #c084fc;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons a {
    color: var(--text-color);
    opacity: 0.7;
    transition: opacity 0.2s ease, color 0.2s ease;
  }

  .social-icons a:hover {
    opacity: 1;
    color: #9333ea;
  }

  :global(html.dark) .social-icons a:hover {
    color: #c084fc;
  }

  .footer-bottom {
    margin-top: 2rem;
    margin-left: -2rem;
    margin-right: -2rem;
    padding: 1.25rem 2rem;
    background: rgba(0, 0, 0, 0.15);
    text-align: center;
  }

  :global(html.dark) .footer-bottom {
    background: rgba(0, 0, 0, 0.3);
  }

  .footer-bottom p {
    font-size: 0.875rem;
    opacity: 0.6;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-bottom .icon {
    display: inline-flex;
    align-items: center;
    line-height: 1;
  }

  .footer-bottom .inline-icon {
    display: inline-block;
    vertical-align: -0.1em;
  }

  @media (max-width: 768px) {
    .footer-nav {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .tagline {
      max-width: none;
    }

    .social-icons {
      justify-content: center;
    }
  }
</style>
