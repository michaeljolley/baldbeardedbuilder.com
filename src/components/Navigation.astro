---
import Icon from './Icon.astro';
---

<nav>
  <ul>
    <li>
      <a href="/"> Home</a>
    </li>
    <li>
      <a href="/blog/">Blog</a>
    </li>
    <li>
      <a href="/speaking/">Speaking</a>
    </li>
    <li>
      <button data-theme-toggle aria-label="Toggle light & dark mode">
        <Icon icon="Sun" class="sun" style="height:1.25rem;width:1.25rem;" />
        <Icon icon="Moon" class="moon" style="height:1.25rem;width:1.25rem;" />
      </button>
    </li>
  </ul>
</nav>

<style>
  :global([data-theme='light']) {
    --nav-link: var(--dark);
    --nav-link-hover: var(--pink);
    .sun {
      display: block;
    }
    .moon {
      display: none;
    }
  }

  :global([data-theme='dark']) {
    --nav-link: var(--light);
    --nav-link-hover: var(--green);
    .sun {
      display: none;
    }
    .moon {
      display: block;
    }
  }

  nav {
    display: flex;
    width: 100%;
  }

  ul {
    display: flex;
    justify-content: space-between;
    width: 100%;
    white-space: nowrap;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    display: flex;
    margin: 0;
    text-transform: lowercase;
  }

  li:not(:first-child) {
    margin-left: 3rem;
  }

  a {
    font-family: var(--syne);
    font-weight: bold;
    color: var(--nav-link);
    text-decoration: none;
  }

  a:hover {
    color: var(--nav-link-hover);
  }

  button {
    background: transparent;
    border: none;
    border: 0;
    cursor: pointer;
    display: inline-block;
  }
  button svg {
    fill: var(--text);
    stroke: var(--text);
  }
  button:hover svg {
    fill: var(--nav-link-hover);
    stroke: var(--nav-link-hover);
  }

  @media screen and (min-width: 640px) {
    nav {
      width: auto;
    }
  }
</style>
