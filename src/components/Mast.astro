---
import Mike from "./Mike";
---

<section>
  <div class="container">
    <div>
      <Mike client:only />
    </div>
    <div>
      <h1>
        I make content<br />
         that <span>educates</span><br />
         and <span>entertains</span>.
      </h1>
    </div>
  </div>
</section>

<style>
  .container {
    @apply flex flex-col gap-3 sm:flex-row;
    @apply justify-center items-center;
  }
  .container div {
    @apply flex flex-col justify-center items-center;
    @apply w-full h-full;
  }

  h1 {
    @apply font-kanit font-semibold text-5xl lg:text-6xl;
    @apply whitespace-nowrap text-center sm:text-left;
    @apply text-zinc-400;
  }
  h1 > span {
    @apply text-neon;
    text-shadow: rgba(103, 229, 101, 0.3) 0px 0px 10px;
    animation: glow 1.5s ease-in-out infinite alternate;
  }
</style>
