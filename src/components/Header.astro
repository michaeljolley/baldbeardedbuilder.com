<header>
  <nav>
    <input id="nav-toggle" type="checkbox" />
    <label class="nav-button-container" for="nav-toggle">
      <div class="nav-button"></div>
    </label>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/blog/">Blog</a>
      </li>
      <li>
        <a href="/brain-dump/">Brain Dump</a>
      </li>
      <li>
        <a href="/work-with-me/">Work With Me</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
  }

  nav {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    width: 100%;
    padding: 2rem 0;
  }

  #nav-toggle {
    display: none;
  }

  .nav-button-container {
    display: none;
    height: 100%;
    width: 30px;
    cursor: pointer;
    align-items: center;
    padding-right: 2rem;
  }

  .nav-button,
  .nav-button::before,
  .nav-button::after {
    display: block;
    background-color: var(--text);
    position: absolute;
    height: 4px;
    width: 30px;
    transition: transform 400ms cubic-bezier(0.23, 1, 0.32, 1);
    border-radius: 2px;
  }

  .nav-button::before {
    content: "";
    margin-top: -8px;
  }

  .nav-button::after {
    content: "";
    margin-top: 8px;
  }

  #nav-toggle:checked + .nav-button-container .nav-button::before {
    margin-top: 0px;
    transform: rotate(405deg);
  }

  #nav-toggle:checked + .nav-button-container .nav-button {
    background: rgba(255, 255, 255, 0);
  }

  #nav-toggle:checked + .nav-button-container .nav-button::after {
    margin-top: 0px;
    transform: rotate(-405deg);
  }

  ul {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    white-space: nowrap;
    list-style: none;
    margin: 0;
    padding: 0;
    padding-right: 2.5rem;
  }

  li {
    display: flex;
    align-items: center;
    margin: 0;
    text-transform: lowercase;
    overflow: hidden;
  }

  li:not(:first-child) {
    margin-left: 3rem;
  }

  a {
    font-family: var(--syne);
    font-weight: bold;
    color: var(--nav-link);
    text-decoration: none;
    border-bottom: 2px solid transparent;
  }

  a:hover {
    border-color: var(--nav-link);
  }

  @media screen and (max-width: 768px) {
    .nav-button-container {
      display: flex;
      padding-bottom: 2rem;
    }
    ul {
      display: flex;
      flex-direction: column;
      width: 100%;
      justify-content: center;
      align-items: center;
      background-color: var(--glass);
      backdrop-filter: blur(10px);
      padding: 0;
    }
    #nav-toggle ~ ul li {
      height: 0;
      margin: 0;
      padding: 0;
      border: 0;
      transition: height 400ms cubic-bezier(0.23, 1, 0.32, 1);
    }
    #nav-toggle:checked ~ ul li {
      height: 2.5em;
      padding: 0.5em 0;
      transition: height 400ms cubic-bezier(0.23, 1, 0.32, 1);
    }
    ul > li {
      display: flex;
      justify-content: center;
      margin: 0;
      padding: 0.5em 0;
      width: 100%;
    }
  }
</style>
