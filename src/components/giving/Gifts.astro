<style>
section {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 4rem 0;
	overflow: hidden;
}
.wrapper {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: 1.5rem;
	margin: 2rem 0;
}
aside {
	position: relative;
	min-width: 40vw;
  z-index: 3;
}
h4 {
	font-family: var(--font-anton);
	font-size: 2.5rem;
	color: var(--blue);
	text-transform: uppercase;
	margin: 0 0 1rem 0;
}
ul.ranks {
	list-style: none;
	display: flex;
	gap: 1rem;
	justify-content: center;
	margin-bottom: 2rem;
}
ul.ranks li {
	font-family: var(--font-anton);
	font-size: 1.5rem;
	color: var(--text);
	text-transform: uppercase;
	padding: 0.5rem;
	background: var(--tint);
	transform: scale(0.9);
	cursor: pointer;
}
ul.ranks li.active,
ul.ranks li:active {
	transform: scale(1.1) rotate(-5deg);
	background-color: var(--pink);
	color: var(--light);
}
ul.ranks li:nth-child(even).active,
ul.ranks li:nth-child(even):active {
	transform: rotate(5deg);
}

ul.gifts {
	display: flex;
  flex-wrap: wrap;
	gap: 1rem;
	justify-content: center;
}
ul.gifts li {
  flex: 0 0 calc(12% - 20px);
	border: 10px dashed var(--dulled-2);
}
ul.gifts li img {
	width: 10rem;
	height: auto;
	filter: blur(5px) grayscale(1);
}
ul.gifts li.active {
	border-color: var(--pink);
}
ul.gifts li.active img {
	filter: none;
}

strong {
	font-weight: bold;
	color: var(--pink);
}

@media (min-width: 768px) /* md */ {
	ul.gifts li img {
		width: 13rem;
	}
}

@media (min-width: 1024px) /* lg */ {
	ul.gifts li img {
		width: 14rem;
	}
}

@media (min-width: 1280px) /* xl */ {
	.wrapper {
		flex-direction: row;
		max-width: 75vw;
		gap: 5rem;
	}
	ul.gifts li img {
		width: 8rem;
	}
}

@media (min-width: 1536px) /* 2xl */ {
	ul.gifts li img {
		width: 10rem;
	}
}


</style>
