---
import Layout from '../layouts/Layout.astro';
import Newsletter from '../components/Newsletter.astro';
import VideoSection from '../components/VideoSection.astro';
import BlogSection from '../components/BlogSection.astro';
import TwitchSection from '../components/TwitchSection.astro';
import { getCollection } from 'astro:content';
import { isOnline } from '../scripts/twitch';

const blogEntries = await getCollection('blog');
const now = new Date();
const sevenDaysAgo = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);
const publishedEntries = blogEntries.filter(entry => entry.data.pubDate <= now);
const sortedEntries = publishedEntries.sort((a, b) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
const latestPost = sortedEntries[0];
const hasRecentPost = latestPost && latestPost.data.pubDate >= sevenDaysAgo;

const { isLive } = await isOnline();
---

<Layout title="Bald Bearded Builder | Michael Jolley">
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1>Michael Jolley</h1>
        <p class="aka">aka The Bald Bearded Builder</p>
        <p class="tagline">Bringing smiles to the syntax â€” because laughter is the best error handler.</p>
        <div class="hero-cta">
          {isLive ? (
            <>
              <a href={`/blog/${latestPost.id}/`} class="btn btn-muted">Read the Latest</a>
              <a href="https://youtube.com/baldbeardedbuilder" class="btn btn-muted" target="_blank" rel="noopener noreferrer">Watch on YouTube</a>
              <a href="https://twitch.tv/baldbeardedbuilder" class="btn btn-live" target="_blank" rel="noopener noreferrer">ðŸ”´ Live on Twitch Now</a>
            </>
          ) : hasRecentPost ? (
            <>
              <a href={`/blog/${latestPost.id}/`} class="btn btn-highlight">Read the Latest</a>
              <a href="https://youtube.com/baldbeardedbuilder" class="btn btn-muted" target="_blank" rel="noopener noreferrer">Watch on YouTube</a>
              <a href="https://twitch.tv/baldbeardedbuilder" class="btn btn-muted" target="_blank" rel="noopener noreferrer">Watch on Twitch</a>
            </>
          ) : (
            <>
              <a href={`/blog/${latestPost.id}/`} class="btn btn-muted">Read the Latest</a>
              <a href="https://youtube.com/baldbeardedbuilder" class="btn btn-muted" target="_blank" rel="noopener noreferrer">Watch on YouTube</a>
              <a href="https://twitch.tv/baldbeardedbuilder" class="btn btn-muted" target="_blank" rel="noopener noreferrer">Watch on Twitch</a>
            </>
          )}
        </div>
      </div>
      <div class="hero-image">
        <img src="https://avatars.githubusercontent.com/u/1228996?v=4" alt="Michael Jolley - Bald Bearded Builder" />
      </div>
    </div>
  </section>

  <BlogSection />

  <TwitchSection />

  <VideoSection />

  <Newsletter />
</Layout>

<style>
  .hero {
    padding: 4rem 2rem;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #9333ea, #3b82f6, #ec4899);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease infinite;
  }

  .aka {
    font-size: 1.25rem;
    opacity: 0.7;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.5rem;
    line-height: 1.5;
    margin-bottom: 2rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-muted {
    background: rgba(128, 128, 128, 0.1);
    color: var(--text-color);
    opacity: 0.6;
  }

  .btn-muted:hover {
    opacity: 1;
    background: rgba(128, 128, 128, 0.2);
  }

  .btn-highlight {
    background: linear-gradient(135deg, #9333ea, #3b82f6);
    color: white;
    box-shadow: 0 4px 20px rgba(147, 51, 234, 0.4);
    animation: wiggle 10s ease-in-out infinite;
  }

  .btn-highlight:hover {
    box-shadow: 0 6px 30px rgba(147, 51, 234, 0.6);
  }

  .btn-live {
    background: linear-gradient(135deg, #ef4444, #f97316, #ef4444);
    background-size: 300% 300%;
    animation: gradient-pulse 2s ease infinite, wiggle 10s ease-in-out infinite;
    color: white;
    box-shadow: 0 4px 20px rgba(239, 68, 68, 0.5);
  }

  .btn-live:hover {
    box-shadow: 0 6px 30px rgba(239, 68, 68, 0.7);
  }

  @keyframes gradient-pulse {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes wiggle {
    0% { transform: rotate(0deg) translateY(0); }
    1% { transform: rotate(-1.5deg) translateY(-2px); }
    2% { transform: rotate(1.5deg) translateY(-2px); }
    3% { transform: rotate(-1deg) translateY(-1px); }
    4% { transform: rotate(1deg) translateY(-1px); }
    5% { transform: rotate(-0.5deg) translateY(0); }
    6%, 100% { transform: rotate(0deg) translateY(0); }
  }

  .hero-image img {
    width: 100%;
    max-width: 400px;
    border-radius: 50%;
    border: 4px solid rgba(147, 51, 234, 0.3);
    box-shadow: 0 20px 60px rgba(147, 51, 234, 0.2);
  }

  @media (max-width: 900px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-image {
      order: -1;
    }

    .hero-image img {
      max-width: 250px;
    }

    .hero-cta {
      justify-content: center;
    }
  }
</style>
