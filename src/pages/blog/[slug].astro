import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { marked } from 'marked';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  const now = new Date();
  
  // Get published entries
  const publishedEntries = blogEntries.filter(entry => entry.data.pubDate <= now);
  
  // Get the next upcoming post only
  const futureEntries = blogEntries
    .filter(entry => entry.data.pubDate > now)
    .sort((a, b) => a.data.pubDate.getTime() - b.data.pubDate.getTime());
  const nextPost = futureEntries.length > 0 ? [futureEntries[0]] : [];
  
  // Only generate pages for published + next upcoming
  const allEntries = [...publishedEntries, ...nextPost];
  
  return allEntries.map(entry => ({
    params: { slug: entry.id },
    props: { entry, isFuturePost: entry.data.pubDate > now },
  }));
}

const { entry, isFuturePost } = Astro.props;
const { Content, headings, remarkPluginFrontmatter } = await render(entry);

// For future posts, extract intro content plus a bit more after the first heading
let introContent = '';
let introHtml = '';
if (isFuturePost && entry.body) {
  const lines = entry.body.split('\n');
  const introLines = [];
  let headingCount = 0;
  let linesAfterHeading = 0;
  let inCodeBlock = false;
  let shouldStop = false;
  
  for (const line of lines) {
    // Track code block state
    if (line.trim().startsWith('```')) {
      inCodeBlock = !inCodeBlock;
    }
    
    if (line.match(/^#{1,2}\s/) && !inCodeBlock) {
      headingCount++;
      if (headingCount > 1 && !inCodeBlock) {
        shouldStop = true;
      }
    }
    
    // After first heading, count paragraphs and mark to stop after a few
    if (headingCount === 1 && line.trim() !== '' && !inCodeBlock) {
      linesAfterHeading++;
      if (linesAfterHeading > 8) {
        shouldStop = true;
      }
    }
    
    // Always add the line if we're in a code block, otherwise check if we should stop
    if (shouldStop && !inCodeBlock) {
      break;
    }
    
    introLines.push(line);
  }
  introContent = introLines.join('\n');
  introHtml = await marked.parse(introContent);
}

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
