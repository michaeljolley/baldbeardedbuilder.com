---
import Layout from '@layouts/Layout.astro';
import VideoCard from '@components/VideoCard.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths({ paginate }) {
  const videoEntries = await getCollection('videos');
  const filteredVideos = videoEntries.filter(video => !video.data.short);
  const sortedEntries = filteredVideos.sort((a, b) =>
    b.data.date.getTime() - a.data.date.getTime()
  );
  return paginate(sortedEntries, { pageSize: 12 });
}

const { page } = Astro.props;
---

<Layout title="Videos">
  <div class="videos-index">
    <header class="videos-header">
      <h1>The {page.total} Things I've Recorded</h1>
      <p>Tutorials, live streams, and shorts about software development.</p>
    </header>

    <ul class="video-list">
      {page.data.map(video => (
        <li class="video-item">
          <VideoCard video={video} showBadge={true} showTags={true} />
        </li>
      ))}
    </ul>

    <nav class="pagination">
      {page.url.prev && (
        <a href={page.url.prev} class="pagination-link prev">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
          Previous
        </a>
      )}
      
      <span class="pagination-info">
        Page {page.currentPage} of {page.lastPage}
      </span>
      
      {page.url.next && (
        <a href={page.url.next} class="pagination-link next">
          Next
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </a>
      )}
    </nav>
  </div>
</Layout>

<style>
  .videos-index {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .videos-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .videos-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #9333ea, #3b82f6, #ec4899, #9333ea);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .videos-header p {
    opacity: 0.7;
    font-size: 1.1rem;
  }

  .video-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .video-item {
    margin: 0;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(128, 128, 128, 0.2);
  }

  .pagination-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--text-color);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    background: rgba(128, 128, 128, 0.1);
    transition: background 0.2s ease, color 0.2s ease;
  }

  .pagination-link:hover {
    background: rgba(147, 51, 234, 0.2);
    color: #9333ea;
  }

  :global(html.dark) .pagination-link:hover {
    color: #c084fc;
  }

  .pagination-info {
    font-size: 0.9rem;
    opacity: 0.7;
  }

  @media (max-width: 640px) {
    .videos-header h1 {
      font-size: 1.75rem;
    }

    .pagination {
      flex-wrap: wrap;
    }
  }
</style>
