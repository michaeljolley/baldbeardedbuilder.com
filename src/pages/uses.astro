---
import Layout from '@layouts/Layout.astro';
import { getCollection } from 'astro:content';

const gearItems = await getCollection('gear');
const activeGear = gearItems.filter(item => item.data.status === 'active');

// Group by category
const groupedGear = activeGear.reduce((acc, item) => {
  const category = item.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(item);
  return acc;
}, {} as Record<string, typeof activeGear>);

// Sort items within each category by rank
Object.keys(groupedGear).forEach(category => {
  groupedGear[category].sort((a, b) => a.data.rank - b.data.rank);
});

// Define category order and icons
const categoryOrder = ['Hardware', 'Software', 'Network', 'Audio', 'Video'];
const categoryIcons: Record<string, string> = {
  'Hardware': 'ðŸ–¥ï¸',
  'Software': 'ðŸ’»',
  'Network': 'ðŸŒ',
  'Audio': 'ðŸŽ™ï¸',
  'Video': 'ðŸ“¹',
};

const sortedCategories = Object.keys(groupedGear).sort((a, b) => {
  const aIndex = categoryOrder.indexOf(a);
  const bIndex = categoryOrder.indexOf(b);
  if (aIndex === -1 && bIndex === -1) return a.localeCompare(b);
  if (aIndex === -1) return 1;
  if (bIndex === -1) return -1;
  return aIndex - bIndex;
});

const totalItems = activeGear.length;
---

<Layout title="Uses">
  <div class="uses-page">
    <header class="uses-header">
      <h1>The {totalItems} Things I Use</h1>
      <p>Hardware, software, and tools that power my daily work.</p>
    </header>

    <div class="categories">
      {sortedCategories.map(category => (
        <section class="category-section" id={category.toLowerCase()}>
          <div class="category-header">
            <span class="category-icon">{categoryIcons[category] || 'ðŸ“¦'}</span>
            <h2>{category}</h2>
            <span class="category-count">{groupedGear[category].length} items</span>
          </div>
          
          <ul class="gear-grid">
            {groupedGear[category].map(item => (
              <li class="gear-item">
                {item.data.link ? (
                  <a href={item.data.link} target="_blank" rel="noopener noreferrer">
                    <div class="gear-card">
                      <div class="gear-content">
                        <h3>{item.data.title}</h3>
                        {item.data.description && (
                          <p>{item.data.description}</p>
                        )}
                        {item.data.tags && item.data.tags.length > 0 && (
                          <div class="gear-tags">
                            {item.data.tags.map((tag: string) => (
                              <span class="tag">{tag}</span>
                            ))}
                          </div>
                        )}
                      </div>
                      <div class="gear-link-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                          <polyline points="15 3 21 3 21 9"></polyline>
                          <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg>
                      </div>
                    </div>
                  </a>
                ) : (
                  <div class="gear-card">
                    <div class="gear-content">
                      <h3>{item.data.title}</h3>
                      {item.data.description && (
                        <p>{item.data.description}</p>
                      )}
                      {item.data.tags && item.data.tags.length > 0 && (
                        <div class="gear-tags">
                          {item.data.tags.map((tag: string) => (
                            <span class="tag">{tag}</span>
                          ))}
                        </div>
                      )}
                    </div>
                  </div>
                )}
              </li>
            ))}
          </ul>
        </section>
      ))}
    </div>
  </div>
</Layout>

<style>
  .uses-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .uses-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .uses-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #9333ea, #3b82f6, #ec4899, #9333ea);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .uses-header p {
    opacity: 0.7;
    font-size: 1.1rem;
  }

  .categories {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .category-section {
    scroll-margin-top: 5rem;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(128, 128, 128, 0.2);
  }

  .category-icon {
    font-size: 1.5rem;
  }

  .category-header h2 {
    font-size: 1.5rem;
    background: linear-gradient(135deg, #9333ea, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  }

  .category-count {
    font-size: 0.8rem;
    opacity: 0.5;
    margin-left: auto;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .gear-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .gear-item {
    margin: 0;
  }

  .gear-item a {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .gear-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    border-radius: 0.75rem;
    background: rgba(128, 128, 128, 0.05);
    border: 1px solid rgba(128, 128, 128, 0.1);
    height: 100%;
    transition: all 0.3s ease;
    position: relative;
  }

  .gear-item a:hover .gear-card {
    background: rgba(128, 128, 128, 0.1);
    border-color: rgba(147, 51, 234, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(147, 51, 234, 0.1);
  }

  .gear-content {
    flex: 1;
  }

  .gear-content h3 {
    font-size: 1rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
    transition: color 0.3s ease;
  }

  .gear-item a:hover .gear-content h3 {
    background: linear-gradient(135deg, #9333ea, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .gear-content p {
    font-size: 0.875rem;
    opacity: 0.7;
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .gear-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.75rem;
  }

  .tag {
    font-size: 0.65rem;
    padding: 0.15rem 0.4rem;
    background: rgba(147, 51, 234, 0.1);
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    font-weight: 500;
    opacity: 0.8;
  }

  .gear-link-icon {
    opacity: 0.3;
    transition: opacity 0.3s ease, transform 0.3s ease;
    flex-shrink: 0;
  }

  .gear-item a:hover .gear-link-icon {
    opacity: 0.8;
    transform: translate(2px, -2px);
  }

  @media (max-width: 640px) {
    .uses-header h1 {
      font-size: 1.75rem;
    }

    .gear-grid {
      grid-template-columns: 1fr;
    }

    .category-header {
      flex-wrap: wrap;
    }

    .category-count {
      margin-left: 0;
      width: 100%;
      margin-top: 0.5rem;
    }
  }
</style>
